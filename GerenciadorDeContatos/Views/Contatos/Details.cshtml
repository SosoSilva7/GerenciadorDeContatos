@model GerenciadorDeContatos.Models.Contatos

@{
    ViewData["Title"] = "Detalhes do Contato";
}


<style>
    body {
        background-color: #648DB3
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-#FFCAD4 text-white rounded-top-4 d-flex align-items-center" style="background-color: #FFCAD4">
                    <i class="bi bi-person-lines-fill text-black me-2 fs-4"></i>
                    <h3 class="mb-0" style="color: black">Detalhes do Contato</h3>
                </div>
                <div class="card-body px-4 py-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-muted">ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Nome</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Telefone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Endereço</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Endereco)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Data de Nascimento</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Categoria</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria)</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between align-items-center rounded-bottom-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-#FFCAD4 rounded-3" style="background-color: #FFCAD4">
                        <i class="bi bi-pencil-fill me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
