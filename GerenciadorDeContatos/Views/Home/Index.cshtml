@{
    ViewData["Title"] = "Home Page";
    ViewBag.IsHomePage = true;
}
<style>
    body {
        background: linear-gradient(135deg, #F9F9E0 0%, #FF407D 100%);
        
        /*648DB3*/
    }
    /* Card principal com design neo-brutalista */
    .hero-card {
        position: relative;
        z-index: 2;
       
        display: flex;
        margin-top: 50px;
   
        cursor: pointer;
        background: #F9F9E0;
        border-radius: 40px;
        padding: 4rem;
        position: relative;
        overflow: hidden;
        max-width: 1400px;
        width: 100%;
        border: 4px solid #FF407D;
        box-shadow: 20px 20px 0px #FF407D, 0 0 0 4px #F9F9E0, 0 50px 100px rgba(0, 0, 0, 0.2);
        transform: rotate(-1deg);
        transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
    }

        .hero-card:hover {
            transform: rotate(0deg) translateY(-10px);
            box-shadow: 25px 25px 0px #FF407D, 0 0 0 4px #F9F9E0, 0 60px 120px rgba(0, 0, 0, 0.3);
        }


    .button {
        margin-top:30px;
        padding: 12.5px 30px;
        border: 0;
        border-radius: 100px;
        background-color: #648DB3;
        color: #ffffff;
        height: 50px;
        font-weight: Bold;
        transition: all 0.5s;
        -webkit-transition: all 0.5s;
    }

        .button:hover {
            background-color: #6fc5ff;
            box-shadow: 0 0 20px #6fc5ff50;
            transform: scale(1.1);
        }

        .button:active {
            background-color: #3d94cf;
            transition: all 0.25s;
            -webkit-transition: all 0.25s;
            box-shadow: none;
            transform: scale(0.98);
        }
</style>
<div class="hero-card">

    <div style="margin-left: 50px ; display:flex ; justify-content: space-between">
        <div style="display:block">
            <h1 class="display-4" style="font-weight:bold ; margin-bottom:20px; margin-top: 60px">Gerenciador De </<br /> Contatos</h1>
            <p style="width:200px ; color:#FF407D ; margin-bottom:40px">
                Organize todos os seus contatos de forma criativa, eficiente e segura!
            </p>
            <a href="/Contatos/Index" class="button">
                Acessar Lista de Contatos
            </a>
        </div>

        <div style="display: flex; justify-content: flex-end; margin-right: 50px;">
            <img src="https://plus.unsplash.com/premium_vector-1720707264468-26496d39c9de?q=80&w=2360&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 style="max-width: 70%; height: auto;"
                 alt="Alternate Text" />
        </div>

    </div>

</div>
